<h1>Book Collection Home Page</h1>

<div>
    <%= link_to("Add New Book", new_book_path) %>

    <table style="width: 100%;">
        <tr>
            <th>Title</th>

            <th>Actions</th>
        </tr>
        <% @books.each do |book| %>
        <tr>
            <td style="text-align: center"><%= book.title %></td>

            <td style="text-align: center">
                <%= link_to("Show", book_path(book)) %>
                <%= link_to("Edit", edit_book_path(book)) %>
                <%= link_to("Delete", delete_book_path(book)) %>
            </td>
        </tr>
        <% end %>
    </table>
</div>







</div>