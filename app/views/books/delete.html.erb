<%= link_to("Back to Book Collection", books_path) %>

<div>
    <h2>Delete Book</h2>

    <%= form_for(@book, method: "delete") do |f| %>
        <p>Are you sure that you want to permanently delete this book?</p>
        <p><%= @book.title %></p>

        <div>
            <%= f.submit("Delete Book") %>
        </div>

    <% end %>
</div>
